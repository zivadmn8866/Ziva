{
  "version": 2,
  "builds": [
    {
      "src": "frontend/package.json",
      "use": "@vercel/static-build",
      "config": { "distDir": "dist" }
    }
  ],
  "routes": [
    { "src": "/api/(.*)", "dest": "https://ziva-6b7g.onrender.com/$1" },
    { "src": "/(.*)", "dest": "/index.html" }
  ]
}
